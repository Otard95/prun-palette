{
  "manifest_version": 3,
  "name": "PrUn Palette",
  "version": "0.3.1",

  "description": "Adds a command palette to Prosperous Universe",

  "icons": {
    "48": "icon48.png",
    "96": "icon96.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://apex.prosperousuniverse.com/*"],
      "js": ["content.js"],
      "css": ["index.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": [
    "*://rest.fnar.net/*"
  ]
}
